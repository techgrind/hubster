.navbar.navbar-inverse(role='navigation' data-bs-navbar data-bs-collapse data-start-collapsed='true')
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-bs-collapse-toggle)
        span.sr-only Toggle Navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#/') {{app.config.name}}
    .navbar-collapse.collapse(data-bs-collapse-target)
      ul.nav.navbar-nav
        li(data-ui-sref-active='active')
          a(data-ui-sref='home') Home

.container
  button.btn.btn-primary.btn-lg(ng-click='home.signOut()' ng-show='!home.currentUser()') Sign out
  a.btn.btn-primary.btn-lg(ui-sref='auth.login' ng-show='home.currentUser()') Sign in

  div(data-ui-view)