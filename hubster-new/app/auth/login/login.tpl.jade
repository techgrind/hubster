md-content(layout-padding="" layout="column")
  md-input-container(flex-gt-sm="40")
    label Email
    input(ng-model="login.form.email")
  md-input-container(flex-gt-sm="40")
    label Password
    input(type="password" ng-model="login.form.password")
md-content.buttons(layout-padding="" layout="row")
  md-button.md-raised.md-primary(flex="" ng-click="login.submit()") Login
  md-button(flex="" ng-click="auth.back()") Back

md-content(layout-padding="" layout="column")
    a(ui-sref="auth.resetPassword") Reset Password
